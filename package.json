    "@types/nodemailer": "^6.4.14",
    "@types/react-lottie": "^1.2.10",
    "@types/showdown": "^2.0.6",
    "prettier": "latest",
    "turbo": "latest",
    "typescript": "^5.4.2"
  },
  "resolutions": {
    "@types/react": "18.2.8"
  },
  "packageManager": "bun@1.1.29"
}
